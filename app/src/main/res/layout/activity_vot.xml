<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VotActivity">
    <TextView
        android:id="@+id/textView123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView14"
        android:layout_marginTop="108dp"
        android:text="E-Mail"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="215dp"
        tools:layout_editor_absoluteY="338dp" />

    <EditText
        android:id="@+id/EditText123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="102dp"
        android:layout_toRightOf="@id/textView123"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView123"
        android:layout_marginTop="128dp"
        android:text="Пароль"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/TextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditText123"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="115dp"
        android:layout_toRightOf="@id/textView13"
        android:ems="10"
        android:inputType="numberPassword" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/b1" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="137dp"
        android:backgroundTint="#2196F3"
        android:text="Назад" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="243dp"
        android:backgroundTint="#FFC107"
        android:text="Готово" />


</RelativeLayout>